<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.group.repository.PaymentMapper">
	<!-- クレジットカード情報の登録 -->
	<insert id="insertPayment"
		parameterType="com.example.group.entity.Payment">
		INSERT INTO payments (users_id,card_number,card_name,security_code,exp_date) 
		VALUES (#{userId},#{cardNumber},#{name},#{securityCode},now())
	</insert>

	<!-- クレジットカード情報の削除 -->
	<delete id="deletePaymentByUserId" parameterType="int">
		DELETE FROM
		payments
		WHERE user_id = #{userId}
	</delete>
	
	<!--ユーザーIDによるカード情報の取得 -->
	<select id="findById"
		resultType="com.example.group.entity.Items">
		SELECT users_id,card_number,card_name
		FROM payments WHERE users_id = #{userId};
	</select>
	
    <!-- カード情報の更新 -->
	<update id="updatePayment"
		parameterType="com.example.group.entity.Payment">
		UPDATE payments
		SET
		card_number = #{cardNumber},
		card_name = #{name},
		security_code = #{securityCode},
		exp_date = #{expDate}
		WHERE
		users_id = #{userId}
	</update>

</mapper>